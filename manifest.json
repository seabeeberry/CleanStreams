{
    "name": "Clean Twitch",
    "version": "1.0",
    "description": "Individualizes Twitch experience by removing unwanted elements and enhancing usability.",
    "manifest_version": 3,
    "permissions": ["storage"],
    "host_permissions": ["https://www.twitch.tv/*"],
    "content_scripts": [
      {
        "matches": ["https://www.twitch.tv/*"],
        "js": ["content.js"]
      }
    ], 
    "action": {
        "default_popup": "popup.html",
        "default_icon": "assets/icon.png"
    }
}
